{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@db/*": ["./db/*"],
      "@graphql/*": ["./graphql/*"],
      "@utils/*": ["./utils/*"]
    },
    "outDir": "./dist"
  }
}
